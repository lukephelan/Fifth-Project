<h1>List of My Favourite Movies</h1>

<table>
  <tr>
    <td><strong>Title</strong></td>
    <td><strong>Release Date</strong></td>
    <td><strong>Genre</strong></td>
  </tr>
  <% @favmovies.each do |movie| %>
  <tr>
    <td><%= link_to movie.movie.title, movie_path(movie.movie), method: :get%></td>
    <td><%= movie.movie.release_date%></td>
    <td><%= movie.movie.genre%></td>
    <% end %>
  </tr>
</table>

<%= link_to "Add a movie to this list", new_favourite_movie_path, method: :get %>
