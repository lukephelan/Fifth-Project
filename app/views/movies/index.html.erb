<h1>List of Movies</h1>

<table>
  <tr>
    <td><strong>Title</strong></td>
    <td><strong>Release Date</strong></td>
    <td><strong>Genre</strong></td>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to movie.title, movie_path(movie), method: :get%></td>
    <td><%=movie.release_date%></td>
    <td><%=movie.genre%></td>
    <% end %>
  </tr>
</table>

<%= link_to "Add a movie to this list", new_movie_path, method: :get %>
